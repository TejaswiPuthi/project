             push(a,num);break;
         case 2:
             num=pop(a);
if(num==-1)
cout<<"\nUnderflow!!";
else
             cout<<"Deleted element:"<<num;break;
         case 3:
             display_stack(a);break;
         default: cout<<"invalid";
       }
      cout<<"Do you wnt to continue?(y/n)";
      cin>>ch;
      }while(ch=='y');break;
  
  case 2:do
{
cout<<"Enter\n1.Enqueue\n2.Dequeue\n3.Display\n";
cin>>op;
int p;
switch(op)
{
case 1: cout<<"enter the element:";
        cin>>num;
        enqueue(a,num);
     break;
case 2: p=dequeue(a);
    cout<<"Deleted element"<<p;
